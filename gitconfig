[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status
  ci = commit
  cim = commit -m
  ciam = commit -am
  br = branch
  co = checkout
  chn = cherry-pick --no-commit
  mrn = merge --no-commit
  df = diff
  dfc = diff --cached
  lg = log -p
  pr = log --pretty=oneline --abbrev-commit
  rbm = rebase master
  hm = log master..HEAD
  hmp = log --pretty=oneline --abbrev-commit master..HEAD

[core]
	excludesfile = /home/drichert/.gitignore
